<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Category", "Index", "Category")</li>
                <li>@Html.ActionLink("Products", "Index", "Product")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Привіт " + User.Identity.Name,
                           "Manage", "Account")
                    </li>
                        <li>@Html.ActionLink("Вихід", "Logout", "Account")</li>
                }
                else
                {
                    <li><a data-toggle="modal" data-target="#loginModal">Login</a></li>
                        @*<li>@Html.ActionLink("Вхід", "Login", "Account")</li>*@
                        <li>@Html.ActionLink("Реєстрація", "Register", "Account")</li>
                }
            </ul>
        </div>
    </div>
</div>